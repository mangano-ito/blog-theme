:root {
    --color-background: #111;
    --color-foreground: #fff;
    --color-aside: color-mod(var(--color-foreground) lightness(-30%));
    --color-ignorable: color-mod(var(--color-foreground) lightness(-70%));
    --color-interactive: hsl(43deg, 100%, 60%);
    --color-accent: hsl(30deg, 50%, 70%);
    --color-test: red;
}
